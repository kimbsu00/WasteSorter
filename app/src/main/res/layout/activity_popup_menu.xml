<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".view.PopupMenuActivity">

    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/home_button_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/home_popup_menu_1"
        android:textColor="@color/home_button_selector_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/galleryBtn"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/home_button_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/home_popup_menu_2"
        android:textColor="@color/home_button_selector_color"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>